<%- layout('layouts/main.ejs') %>

<h4 class="text-center" style="margin-bottom: -40px; margin-top: -15px; "></h4>

<div class="row" style="padding: 1em;  max-width: 100%; margin-left: 2px;" >
  
    <% for(var i=0; i < services.length; i++) { %>
      <div style="padding: 5px; display:inline-block ">
      <div class="card text-white bg-secondary mb-3" style="max-width: 16em">
          <div class="card-header text-center font-weight-bold bg-dark"><%= services[i].title %></div>
          <img class="card-img-top" style="max-width: 10rem; max-height: 10rem; display:block; margin:auto;" src="https://images.vexels.com/media/users/3/135118/isolated/preview/676bf0e9f3c16649cd7f426c6dcd755a-flat-user-sign-with-round-background-by-vexels.png" alt="Card image cap">
          <div class="card-body">
            <p class="card-title text-center bg-dark" style="border-radius: 20px">Prestador: <%= services[i].username %></p>
          <p class="card-title text-center bg-danger" style="border-radius: 5px; padding: 5px;"><% if (services[i].status) { %> <img style="width: 20px; height: 20px;" src="https://i.ibb.co/wYx2XQn/clock.png" alt=""> Disponibilidad Inmediata <% } else { %> Confirmar Disponibilidad <% } %></p>
            <hr><p class="card-text text-justify bg-dark" style="border-radius: 5px; padding: 5px;"><%= services[i].description %></p><hr>
            <% if (user && !user.isServiceProvider()) { %><a href="/requestservice/<%= services[i]._id %>"><button type="button" class="btn btn-light">Solicitar</button></a>&nbsp&nbsp&nbsp<img style="width: 20px; height: 20px;" src="https://i.ibb.co/mC7Zrm0/star.png" alt=""><img style="width: 20px; height: 20px;" src="https://i.ibb.co/mC7Zrm0/star.png" alt=""><img style="width: 20px; height: 20px;" src="https://i.ibb.co/mC7Zrm0/star.png" alt=""><img style="width: 20px; height: 20px;" src="https://i.ibb.co/mC7Zrm0/star.png" alt=""><img style="width: 20px; height: 20px;" src="https://i.ibb.co/mC7Zrm0/star.png"><% } %>
          </div>
        </div>
      </div>
    <% } %>
  </div>

     
 

