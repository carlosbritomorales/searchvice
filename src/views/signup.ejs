<%- layout('layouts/main.ejs') %>

<div class="row">
  <div class="col-md-4 offset-md-4">
      <div class="card mt-2 text-center">
        <div class="card-header"><h3>Únete</h3></div>
          <div class="card-body">
              <form action="/signup" method="POST">
                
                <div class="form-group">Nombre de usuario
                    <input type="text" name="name" placeholder="ingresa un nombre" class="form-control">
                </div>

                <div class="form-group">Fecha de nacimiento
                  <input type="date" name="birthdate" class="form-control">
                </div>                

                <div class="form-group">Correo electrónico
                    <input type="email" name="email" placeholder="ingresa un email" class="form-control">
                </div>
                
                <div class="form-group">Contraseña
                    <input type="password" name="password" placeholder="ingresa una contraseña" class="form-control">
                </div>

                <div class="form-group">
                  <input type="checkbox" name="usertype" placeholder="tipo de usuario" class="form-control"> Soy Prestador de servicios
              </div>

                <button type="submit" class="btn btn-prymary btn-block mt-4 btn-dark">
                  Listo!
                </button>
              </form>
          </div>
      </div>
  </div>
</div>

